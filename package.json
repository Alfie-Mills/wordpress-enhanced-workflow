{
	"name": "wordpress-enhanced-workflow",
	"description": "Enhance your WordPress workflow one command after the other.",
	"version": "1.1.0",
	"author": "Jackson Lewis",
	"license": "MIT",
	"workflow": {
        "install": "cd wp-content/themes/shiftr && npm install",
        "watch": "cd wp-content/themes/shiftr && gulp watch",
		"build": "cd wp-content/themes/shiftr && NODE_ENV='production' gulp build",
        "ssh": ".workflow/commands/ssh.bash $1",
        "ssh-staging": "npm -s run ssh staging",
        "ssh-production": "npm -s run ssh production",
		"sync-db": ".workflow/commands/sync-db.bash $1 $2",
		"sync-media": ".workflow/commands/sync-media.bash $1 $2",
		"get-staging-db": ".workflow/commands/sync-db.bash staging dev",
		"get-staging-media": ".workflow/commands/sync-media.bash staging dev",
		"get-staging": "npm -s run get-staging-db && npm -s run get-staging-media",
		"get-production-db": ".workflow/commands/sync-db.bash production dev",
		"get-production-media": ".workflow/commands/sync-media.bash production dev",
		"get-production": "npm -s run get-production-db && npm -s run get-production-media",
		"push-staging-db": ".workflow/commands/sync-db.bash dev staging",
		"push-staging-media": ".workflow/commands/sync-media.bash dev staging",
        "push-staging": "npm -s run push-staging-db && npm -s run push-staging-media",
        "launch-env": ".workflow/commands/launch-env.bash $1",
        "woo-override": ".workflow/commands/woocommerce-override-template.bash $1"
	}
}
